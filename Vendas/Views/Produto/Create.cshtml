@model Vendas.Models.Produto
@{
    ViewData["Title"] = "Criar Produto";
}
<h2>Criar Produto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DscProduto"></label>
        <input asp-for="DscProduto" class="form-control" />
        <span asp-validation-for="DscProduto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VlrUnitario"></label>
        <input asp-for="VlrUnitario" class="form-control" />
        <span asp-validation-for="VlrUnitario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
