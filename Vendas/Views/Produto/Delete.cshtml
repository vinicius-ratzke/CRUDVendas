@model Vendas.Models.Produto
@{
    ViewData["Title"] = "Excluir Produto";
}
<h2>Excluir Produto</h2>
<h3>Tem certeza que deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DscProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DscProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VlrUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VlrUnitario)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
