@model Vendas.Models.Cliente
@{
    ViewData["Title"] = "Excluir Cliente";
}
<h2>Excluir Cliente</h2>
<h3>Tem certeza que deseja excluir este cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nmCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nmCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idCliente" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
