@model Vendas.Models.Cliente
@{
    ViewData["Title"] = "Criar Cliente";
}
<h2>Criar Cliente</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="nmCliente"></label>
        <input asp-for="nmCliente" class="form-control" />
        <span asp-validation-for="nmCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" class="form-control" />
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
