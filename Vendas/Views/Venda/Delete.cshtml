@model Vendas.Models.Venda
@{
    ViewData["Title"] = "Excluir Venda";
}
<h2>Excluir Venda</h2>
<h3>Tem certeza que deseja excluir esta venda?</h3>
<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idVenda)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente?.nmCliente
        </dd>
        <dt class="col-sm-2">
            Produto
        </dt>
        <dd class="col-sm-10">
            @Model.Produto?.DscProduto
        </dd>
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.qtdVenda)
        </dd>
        <dt class="col-sm-2">
            Valor Unitário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vlrUnitarioVenda)
        </dd>
        <dt class="col-sm-2">
            Data Venda
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dthVenda)
        </dd>
        <dt class="col-sm-2">
            Valor Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vlrTotalVenda)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idVenda" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
